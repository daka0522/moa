rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  	// Collection user 
    match /user/{document=**} {
    	allow read;
    }
    
    
    // @Colletion Group
    match /{path=**}/blog/{documents} {
    	allow read;
      allow write: if request.auth == !null;
    }
    
    // @ User
    match /user/{userId}/{document=**} {
    	allow read, write: if request.auth.uid == userId && request.auth.token.email_verified;   
    }
    
    // @ Dev 
    match /dev/{document=**} {
    	allow read; 
      allow write: if request.auth.uid == '82wtBYXtw4cf6r8xtfJLCgav9Pp2';
    }
    match /{path=**}/update/{documents} {
    	allow read; 
    }

  }
}
